<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base theme extending Material3 -->
    <style name="Base.Theme.COURSEWORK" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <!-- App theme referencing base -->
    <style name="Theme.COURSEWORK" parent="Base.Theme.COURSEWORK" />

    <!-- Custom title for confirmation card -->
    <style name="ConfirmationCardTitle">
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleLarge</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <!-- Label style -->
    <style name="ConfirmationLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyLarge</item>
    </style>

    <style name="ConfirmationValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyLarge</item>
    </style>
    <style name="Widget.App.Button.Split.Start" parent="Widget.Material3.Button">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.Button.Split.Start</item>
    </style>

    <style name="ShapeAppearance.App.Button.Split.Start" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeBottomLeft">24dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="Widget.App.Button.Split.End" parent="Widget.Material3.Button.Icon">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.Button.Split.End</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="ShapeAppearance.App.Button.Split.End" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeBottomRight">24dp</item>
    </style>


</resources>
