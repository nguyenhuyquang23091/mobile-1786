<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.COURSEWORK" parent="Theme.Material3.Light.NoActionBar">
        <!-- Assign the core color roles -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorError">@color/red</item>

        <!-- Define default colors for surfaces, backgrounds, and text -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/textColorPrimary</item>
        <item name="colorOnSurfaceVariant">@color/colorAccent</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <!-- Bottom navigation colors -->
        <item name="bottomNavigationStyle">@style/BottomNavigationStyle</item>

        <!-- Ensure default text colors are set correctly -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="Theme.COURSEWORK" parent="Base.Theme.COURSEWORK" />

    <!-- Style for the small detail cards in the vibrant layout -->
    <style name="VibrantDetailCard" parent="Widget.Material3.CardView.Filled">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- Style for the content within the small detail cards -->
    <style name="VibrantDetailCardContent" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Style for icons within the small detail cards -->
    <style name="VibrantDetailCardIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="tint">@color/vibrant_text_secondary</item>
    </style>

    <!-- Style for the label text (e.g., "Day", "Time") -->
    <style name="VibrantDetailCardLabel" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/vibrant_text_secondary</item>
    </style>

    <!-- Style for the value text (e.g., "Monday", "7:00 AM") -->
    <style name="VibrantDetailCardValue" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="BottomNavigationStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/textColorPrimary</item>
        <item name="itemTextColor">@color/textColorPrimary</item>
        <item name="android:elevation">8dp</item>
    </style>
</resources>
